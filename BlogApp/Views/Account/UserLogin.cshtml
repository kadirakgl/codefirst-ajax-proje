@{
    ViewData["Title"] = "Kullanıcı Girişi";
}
<div class="container d-flex flex-column align-items-center justify-content-center" style="height: 80vh;">
    <div class="card shadow p-4" style="min-width:320px;">
        <h2 class="mb-4 text-center">Kullanıcı Girişi</h2>
        <form asp-action="UserLogin" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Kullanıcı Adı</label>
                <input type="text" name="username" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Şifre</label>
                <input type="password" name="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
            <div class="text-danger mt-2">
                @Html.ValidationSummary(false)
            </div>
        </form>
        <div class="mt-3 text-center d-flex flex-column gap-2">
            <a href="@Url.Action("Register", "Account")" class="btn btn-outline-success w-100">Kayıt Ol</a>
            <a href="@Url.Action("Login", "Account")">Giriş Seçimine Dön</a>
        </div>
    </div>
</div> 